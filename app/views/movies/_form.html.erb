<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </div>
  <div class="field">
    <%= f.label :length %><br>
    <%= f.number_field :length %>
  </div>
  <div class="field">
    <%= f.label :release_year %><br>
    <%= f.number_field :release_year %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <p><%= f.label "No Rating" %>
    <%= f.radio_button(:rating, 0) %></p>
    <%= f.label "1-5 (5 being best)" %><br>
    <%= f.radio_button(:rating, 1) %>
    <%= f.radio_button(:rating, 2) %>
    <%= f.radio_button(:rating, 3) %>
    <%= f.radio_button(:rating, 4) %>
    <%= f.radio_button(:rating, 5) %>
  </div>
  <div class="field">
    <%= f.label :format_id %>
    <%= collection_select(:movie, :format_id, Format.all, :id, :name, prompt: true) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
